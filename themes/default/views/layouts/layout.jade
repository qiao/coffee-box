!!! 5
mixin messages
  #messages
    ul.error
      for error in messages.error
        li=error
    ul.info
      for info in messages.info
        li=info
html
  head
    meta(charset='utf-8')
    title= config.sitename
    != cssAssets
    //if lt IE 9
      script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
  body
    include _header
    .body-container 
      block content
      if typeof(templateData)!='undefined'
        #templateData
          a.btn(href='#templateData').btn-show show template data ↓
          a.btn(href='#').btn-hide hide template data ↑
          pre=templateData
        :stylus
          #templateData
            >pre
              display none
            >.btn
              display block
              &.btn-hide
                display none

            &:target
              >pre
                display block
              >.btn-hide
                display block
              >.btn-show
                display none


    include _footer
    != jsAssets
