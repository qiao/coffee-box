// entry

#entry-list
  clear both

.entry
  color #444
  background-color #fff
  padding 30px
  margin-bottom 50px
  box-shadow 0 3px 5px rgba(0, 0, 0, 0.1)
  font-size 14px !important
  line-height 21px
  li
    color #444
  p
    font-size 14px
    line-height 21px
  img
    max-width 780px

.entry-header
  padding-bottom 10px
  margin-bottom 20px
  border-bottom 1px solid rgba(0, 0, 0, 0.1)

.entry-title a
  color #555
  font-size 28px

.entry-title a:hover
  color #444
  
.entry ul, .entry ol
  margin 0 0 18px 25px
  
.entry-meta
  position absolute
  width 60px
  height 60px
  background rgba(0, 100, 200, 0.6)
  margin-left -90px
  margin-top -50px
  text-align center
  color #fff

.entry-day
  margin-top 12px
  font-size 30px
  font-weight bold

.entry-month
  margin-top 3px
  font-size 16px
  font-weight bold

.entry-content h1,
.entry-content h2,
.entry-content h3,
.entry-content h4,
.entry-content h5,
.entry-content h6
  padding-top 3px
  padding-bottom 15px

.entry input[type=text], 
.entry textarea
  width 100%
  padding 4px 0

.entry textarea
  resize vertical
