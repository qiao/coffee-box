a(href=postPath(post) + commentsAnchor(post)).comments-info
  if comments.length == 0
    = 'Leave a comment'
  else
    #{comments.length + (comments.length == 1 ? ' comment' : ' comments')}

div(id='comments-#{post._id}').comments
  ul.comments-list.unstyled
    for comment in comments
     include _comment

  include _form
